generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model airport {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  name   String  @unique
  icao   String  @unique
  charts chart[]
}

model chart {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String  @unique
  url         String
  category    String?
  lastUpdated String?
  airport     airport @relation(fields: [airportId], references: [id])
  airportId   String  @db.ObjectId
}
