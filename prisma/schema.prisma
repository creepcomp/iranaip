generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Airport {
  icao   String  @unique
  name   String
  charts Chart[]
}

model Chart {
  id          String         @id @default(cuid())
  icao        String?
  name        String
  category    ChartCategory?
  url         String
  lastUpdated DateTime
  airport     Airport?       @relation(fields: [icao], references: [icao])

  @@unique([icao, name])
  @@index([icao, category])
}

enum ChartCategory {
  GND
  APP
  SID
  STAR
  ENR
  VAC
}
